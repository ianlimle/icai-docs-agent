{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"verbatimModuleSyntax": false,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
